{
	"name": "yurisense-application",
	"version": "0.1.0",
	"main": "public/electron.js",
	"homepage": ".",
	"dependencies": {
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^13.5.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-scripts": "5.0.1",
		"electron-is-dev": "^2.0.0"
	},
	"scripts": {
		"start:react": "react-scripts start",
		"build:react": "react-scripts build",
		"build": "npm run clean && npm run build:react",
		"pack": "npm run build && npx electron-builder --dir",
		"dist": "npm run build && npx electron-builder",
		"clean": "npx rimraf build dist",
		"dev": "concurrently -k \"set BROWSER=none& npm run start:react\" \"npm:electron\"",
		"electron": "set NODE_OPTIONS=& npx wait-on http://127.0.0.1:3000 && npx electron ."
	},
	"build-test": {
		"files": [
			{
				"from": "build",
				"to": "public",
				"filter": [
					"**/*"
				]
			}
		]
	},
	"devDependencies": {
		"concurrently": "^8.2.1",
		"electron": "^26.1.0",
		"electron-builder": "^24.6.3",
		"wait-on": "^7.0.1",
		"rimraf": "^5.0.1"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
